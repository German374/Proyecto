<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="12.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ec.edu.espoch.analisispendiente.controller.interfaces.PrimaryController">

    <children>

        <Label styleClass="titulo" text="ANÁLISIS DE LA FUNCIÓN">
         <font>
            <Font name="System Bold Italic" size="18.0" />
         </font></Label>

        <ComboBox fx:id="cbTipoFuncion" promptText="SELECCIONAR FUNCIÓN" />

        <TextField fx:id="txtA" promptText="Ingrese a" />
        <TextField fx:id="txtB" promptText="Ingrese b" />
        <TextField fx:id="txtC" promptText="Ingrese c" />

        <TextArea fx:id="txtAnalisis" editable="false" promptText="Aquí se mostrará el análisis" wrapText="true" />

        <Button onAction="#analizar" styleClass="button primario" text="Analizar" />

        <Button onAction="#limpiar" styleClass="button secundario" text="Limpiar">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>

        <Button onAction="#irSegundaVista" styleClass="button primario" text="Ir a Resultado" />

    </children>

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
   <stylesheets>
      <URL value="@.css" />
      <URL value="@style.css" />
   </stylesheets>

</VBox>
